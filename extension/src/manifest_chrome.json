{
  "manifest_version": 3,
  "name": "cowatch",
  "version": "0.0.4",
  "permissions": ["webNavigation", "scripting", "tabs"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "js": ["core.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],

  "web_accessible_resources": [{
    "resources": ["room_ui.css", "room_ui.js", "player_interceptor.js", "client_collector.js"],
    "matches": ["https://www.youtube.com/*"]
  }]
}
