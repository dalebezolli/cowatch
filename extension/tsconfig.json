{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,

    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./src/**/*"],
  "types": ["./src/*"],
  "files": ["./src/types.d.ts"]
}
